<plugin>

    <extension
           point="org.eclipse.sirius.sessionManagerListener">
        <listener
              class="org.eclipse.emf.ecoretools.ale.ide.listener.AleSessionManagerListener">
        </listener>
     </extension>

  <extension point="org.eclipse.sirius.componentization">
    <component class="org.eclipse.emf.ecoretools.ale.ide.Activator"
               id="org.eclipse.emf.ecoretools.ale.ide"
	       name="org.eclipse.emf.ecoretools.ale">
    </component>
  </extension>
  <extension point="org.eclipse.emf.ecore.invocation_delegate">
      <factory
            class="org.eclipse.emf.ecoretools.ale.core.delegate.ALEInvocationDelegateFactory"
            uri="http://implementation/">
      </factory>
   </extension>
  <extension
        point="org.eclipse.ui.editors">
     <editor
           class="org.eclipse.jdt.internal.ui.propertiesfileeditor.PropertiesFileEditor"
           default="true"
           extensions="dsl"
           id="org.eclipse.emf.ecoretools.ale.ide.dsl"
           name="DSL editor">
     </editor>
  </extension>
  <extension
        point="org.eclipse.ui.propertyPages">
     <page
           class="org.eclipse.emf.ecoretools.ale.ide.AlePropertyPage"
           id="org.eclipse.emf.ecoretools.ale.ide.propertypage"
           name="ALE settings">
        <enabledWhen>
           <adapt
                 type="org.eclipse.core.resources.IProject">
           </adapt>
        </enabledWhen>
     </page>
  </extension>
  <extension
        point="org.eclipse.debug.core.launchConfigurationTypes">
     <launchConfigurationType
           delegate="org.eclipse.emf.ecoretools.ale.ide.launchconfig.AleLaunchConfigurationDelegate"
           id="org.eclipse.emf.ecoretools.ale.ide.launchConfigurationType"
           modes="run,debug"
           name="ALE launch"
           sourceLocatorId="org.eclipse.emf.ecoretools.ale.ide.aleSourceLocator"
           sourcePathComputerId="org.eclipse.emf.ecoretools.ale.ide.aleSourcePathComputer">
     </launchConfigurationType>
  </extension>
  <extension
        point="org.eclipse.debug.ui.launchShortcuts">
     <shortcut
           class="org.eclipse.emf.ecoretools.ale.ide.launchconfig.LaunchShortcut"
           id="org.eclipse.emf.ecoretools.ale.ide.shortcut"
           label="ALE launch"
           icon="icons/ALE.gif"
           modes="run">
        <contextualLaunch>
           <enablement>
              <with
                    variable="selection">
                 <count
                       value="1">
                 </count>
                 <iterate>
                    <test
                          property="org.eclipse.debug.ui.matchesPattern"
                          value="*.dsl">
                    </test>
                 </iterate>
              </with>
           </enablement>
        </contextualLaunch>
     </shortcut>
  </extension>
  <extension
        point="org.eclipse.debug.ui.launchConfigurationTabGroups">
     <launchConfigurationTabGroup
           class="org.eclipse.emf.ecoretools.ale.ide.launchconfig.AleLaunchConfigurationTabGroup"
           id="org.eclipse.emf.ecoretools.ale.ide.launchConfigurationTabGroup"
           type="org.eclipse.emf.ecoretools.ale.ide.launchConfigurationType">
     </launchConfigurationTabGroup>
  </extension>
     <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
        icon="icons/ALE.gif"
        configTypeID="org.eclipse.emf.ecoretools.ale.ide.launchConfigurationType"
        id="org.eclipse.emf.ecoretools.ale.ide.launcher.image">
    </launchConfigurationTypeImage>
  </extension>
     <extension
           point="org.eclipse.debug.core.sourceLocators">
        <sourceLocator
              class="org.eclipse.emf.ecoretools.ale.ide.debug.AleSourceLookupDirector"
              id="org.eclipse.emf.ecoretools.ale.ide.aleSourceLocator"
              name="AleSourceLocator">
        </sourceLocator>
     </extension>
     <extension
           point="org.eclipse.debug.core.sourcePathComputers">
        <sourcePathComputer
              class="org.eclipse.emf.ecoretools.ale.ide.debug.AleSourcePathComputerDelegate"
              id="org.eclipse.emf.ecoretools.ale.ide.aleSourcePathComputer">
        </sourcePathComputer>
     </extension>
     <extension
           point="org.eclipse.debug.ui.debugModelPresentations">
        <debugModelPresentation
              class="org.eclipse.emf.ecoretools.ale.ide.debug.AleDebugModelPresentation"
              id="org.eclipse.emf.ecoretools.ale.ide">
        </debugModelPresentation>
     </extension>
     <extension
           id="aleBreakpointMarker"
           name="ALE Breakpoint Marker"
           point="org.eclipse.core.resources.markers">
        <super
              type="org.eclipse.debug.core.lineBreakpointMarker">
        </super>
        <persistent value="true"/>
     </extension>
     <extension
           point="org.eclipse.debug.core.breakpoints">
        <breakpoint
              class="org.eclipse.emf.ecoretools.ale.ide.debug.AleLineBreakpoint"
              id="org.eclipse.emf.ecoretools.ale.ide.breakpoint"
              markerType="org.eclipse.emf.ecoretools.ale.ide.aleBreakpointMarker"
              name="ALE Breakpoint">
        </breakpoint>
     </extension>
     <extension
           point="org.eclipse.core.runtime.adapters">
        <factory
              adaptableType="org.eclipse.xtext.ui.editor.XtextEditor"
              class="org.eclipse.emf.ecoretools.ale.ide.debug.AleBreakpointAdapterFactory">
           <adapter
                 type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget">
           </adapter>
        </factory>
     </extension>
     <extension
           point="org.eclipse.ui.editorActions">
        <editorContribution
              id="org.eclipse.emf.ecoretools.ale.ide.rulerActions"
              targetID="org.eclipse.emf.ecoretools.Ale">
           <action
                 actionID="RulerDoubleClick"
                 class="org.eclipse.emf.ecoretools.ale.ide.debug.RulerToggleBreakpointAction"
                 id="org.eclipse.emf.ecoretools.ale.ide.doubleClickBreakpointAction"
                 label="label"
                 style="push">
           </action>
        </editorContribution>
     </extension>
</plugin>
